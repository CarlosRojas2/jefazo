# -----------------------------------------------------------
# STAGE 1: Build y Runtime
# -----------------------------------------------------------
FROM php:8.2-fpm AS base

# 1. Instalar dependencias de sistema y extensiones (bcmath, gd, etc.)
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libpq-dev \
    zip \
    unzip \
    tini \
    nodejs \
    npm \
    # Instalar NodeSource manualmente ya que el RUN curl... falló en el log.
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# 2. Instalar extensiones de PHP (Solución bcmath/gd)
RUN docker-php-ext-install pdo_pgsql pgsql mbstring exif pcntl bcmath gd opcache

# 3. Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer
WORKDIR /var/www

# COPIAR TODOS LOS ARCHIVOS DEL PROYECTO AQUÍ (ANTES DE COMPOSER Y VITE)
COPY . .

# 4. Instalar dependencias de Composer
RUN composer install --optimize-autoloader --no-dev --no-scripts --no-interaction

# 5. Instalar Node (pnpm) y Compilar Assets (Vite/React)
RUN npm install -g pnpm \
    && pnpm install \
    && pnpm run build  # <-- ¡Esto ahora funcionará porque los archivos ya están copiados!

# 6. Dar permisos
RUN chown -R www-data:www-data /var/www \
    && chmod -R 775 /var/www/storage \
    && chmod -R 775 /var/www/bootstrap/cache

# -----------------------------------------------------------
# STAGE 2: Runtime Command
# -----------------------------------------------------------
# Exponer el puerto
EXPOSE 8000

# Comando de Inicio: Ejecuta comandos de Deploy y luego inicia el servidor web de Laravel
CMD php artisan migrate --force && \
    php artisan config:cache && \
    php artisan route:cache && \
    php artisan view:cache && \
    php artisan serve --host=0.0.0.0 --port=$PORT